[Unit]
Description=cBlocks Backend

[Service]
ExecStart=/usr/bin/node /home/pi/backend/index.js
Restart=always
User=nobody
# Note RHEL/Fedora uses 'nobody', Debian/Ubuntu uses 'nogroup'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=stand-alone
WorkingDirectory=/home/pi/backend

[Install]
WantedBy=multi-user.target
